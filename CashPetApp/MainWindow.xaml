<Window x:Class="FinancialTamagotchi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Финансовый Тамагоччи" 
        Height="700" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        ResizeMode="CanMinimize">

    <Grid>
        <!-- Верхняя панель с валютой -->
        <Border Background="#4CAF50"
                Height="80"
                CornerRadius="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Кнопка меню -->
                <Button x:Name="MenuButton"
                        Grid.Column="0" 
                        Content="☰" 
                        FontSize="24"
                        Width="60"
                        Height="60"
                        Margin="20,0"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="MenuButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="30">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Заголовок -->
                <TextBlock Grid.Column="1"
                           Text="Финансовый Тамагоччи"
                           Foreground="White"
                           FontSize="24"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>

                <!-- Баночка корма с валютой -->
                <Border Grid.Column="2"
                        Margin="20,0"
                        Background="White"
                        CornerRadius="20"
                        Padding="15,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🍯"
                                   FontSize="24"
                                   VerticalAlignment="Center"/>
                        <TextBlock x:Name="CurrencyText"
                                   Text="0 ₽"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#4CAF50"
                                   Margin="10,0,0,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Основное содержимое - главное меню -->
        <Grid Margin="0,80,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <!-- Приветствие -->
            <TextBlock x:Name="WelcomeText"
                       Grid.Row="0"
                       Text="Привет, Друг!"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#4CAF50"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,20"/>

            <!-- Первый ряд кнопок -->
            <UniformGrid Grid.Row="1" 
                         Columns="2" 
                         Rows="1"
                         Margin="40,20">
                <!-- Добавить трату -->
                <Button x:Name="ExpenseButton"
                        Margin="20"
                        Background="#FF5722"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="ExpenseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="15">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <StackPanel>
                        <TextBlock Text="💸"
                                   FontSize="48"
                                   HorizontalAlignment="Center"
                                   Margin="0,10"/>
                        <TextBlock Text="Добавить трату"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   Margin="0,10"/>
                    </StackPanel>
                </Button>

                <!-- Добавить заработок -->
                <Button x:Name="IncomeButton"
                        Margin="20"
                        Background="#4CAF50"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="IncomeButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="15">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <StackPanel>
                        <TextBlock Text="💰"
                                   FontSize="48"
                                   HorizontalAlignment="Center"
                                   Margin="0,10"/>
                        <TextBlock Text="Добавить заработок"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   Margin="0,10"/>
                    </StackPanel>
                </Button>
            </UniformGrid>

            <!-- Второй ряд кнопок -->
            <UniformGrid Grid.Row="2" 
                         Columns="2" 
                         Rows="1"
                         Margin="40,20">
                <!-- Питомец -->
                <Button x:Name="PetButton"
                        Margin="20"
                        Background="#FFC107"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="PetButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="15">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <StackPanel>
                        <TextBlock Text="🐹"
                                   FontSize="48"
                                   HorizontalAlignment="Center"
                                   Margin="0,10"/>
                        <TextBlock Text="Мой питомец"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   Margin="0,10"/>
                    </StackPanel>
                </Button>

                <!-- Цели -->
                <Button x:Name="GoalsButton"
                        Margin="20"
                        Background="#2196F3"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="GoalsButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="15">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <StackPanel>
                        <TextBlock Text="🎯"
                                   FontSize="48"
                                   HorizontalAlignment="Center"
                                   Margin="0,10"/>
                        <TextBlock Text="Мои цели"
                                   FontSize="18"
                                   FontWeight="FontWeights.Bold"
                                   Foreground="White"
                                   HorizontalAlignment="HorizontalAlignment.Center"
                                   Margin="0,10"/>
                    </StackPanel>
                </Button>
            </UniformGrid>
        </Grid>

        <!-- Диалоговые окна будут открываться поверх -->
    </Grid>
</Window>