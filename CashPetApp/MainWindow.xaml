<Window x:Class="FinancialTamagotchi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Финансовый Тамагоччи" 
        Height="700" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Grid>
        <!-- Левая часть с питомцем -->
        <Border Background="#FFF9E6" BorderBrush="#FFD699" BorderThickness="0,0,1,0" Margin="581,0,0,0">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Питомец -->
                <Border x:Name="PetBorder" Width="200" Height="200" Background="#FFE066" CornerRadius="100"
                        BorderBrush="#FFB300" BorderThickness="3" Margin="0,0,0,20">
                    <TextBlock x:Name="PetEmoji" Text="🐹" FontSize="80" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <!-- Имя питомца -->
                <TextBlock x:Name="PetNameText" Text="Копилко-хомяк" FontSize="20" FontWeight="Bold" Foreground="#8B4513"
                           HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <!-- Статистика питомца -->
                <Border Background="White" CornerRadius="10" Padding="15" Margin="10">
                    <StackPanel>
                        <!-- Игровая валюта (корм) -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="🥕" FontSize="14" Foreground="#FF9800" VerticalAlignment="Center"/>
                            <TextBlock x:Name="FoodText" Text="100" FontSize="14" FontWeight="Bold" 
                                       Foreground="#FF9800" Margin="5,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>

                        <TextBlock Text="🍯 Баланс:" FontSize="14" Foreground="#666"/>
                        <TextBlock x:Name="PetBalanceText" Text="15 000 ₽" FontSize="18" FontWeight="Bold" 
                                   Foreground="#4CAF50" Margin="0,0,0,10"/>

                        <TextBlock Text="😊 Настроение:" FontSize="14" Foreground="#666"/>
                        <TextBlock x:Name="MoodText" Text="Отличное! 😊" FontSize="16" FontWeight="Bold" Foreground="#FF9800" Margin="0,0,0,10"/>

                        <TextBlock Text="⚡ Энергия:" FontSize="14" Foreground="#666"/>
                        <ProgressBar x:Name="EnergyBar" Value="80" Maximum="100" Height="10" Margin="0,2,0,0" Foreground="#4CAF50"/>

                        <!-- Кнопка кормления -->
                        <Button x:Name="FeedPetButton" Content="🥕 Покормить (10 корма)" 
                                Margin="0,10,0,0" Height="30" Background="#FF9800" 
                                Foreground="White" FontSize="12" Click="FeedPetButton_Click"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Правая часть с кнопками -->
        <Border Margin="0,5,424,5" Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Верхние 2 кнопки -->
                <UniformGrid Grid.Row="0" Columns="2" Rows="1" Margin="40,95,40,0">
                    <!-- Добавить трату -->
                    <Button x:Name="ExpenseButton" Margin="20,20,20,20" Click="ExpenseButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="#FF5722" CornerRadius="15">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <StackPanel>
                            <TextBlock Text="💸" FontSize="48" HorizontalAlignment="Center" Margin="0,10,0,5"/>
                            <TextBlock Text="Добавить трату" FontSize="18" FontWeight="Bold" 
                                       Foreground="White" HorizontalAlignment="Center" Margin="0,5,0,10"/>
                        </StackPanel>
                    </Button>

                    <!-- Добавить доход -->
                    <Button x:Name="IncomeButton" Margin="20,20,20,20" Click="IncomeButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="#4CAF50" CornerRadius="15">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <StackPanel>
                            <TextBlock Text="💰" FontSize="48" HorizontalAlignment="Center" Margin="0,10,0,5"/>
                            <TextBlock Text="Добавить доход" FontSize="18" FontWeight="Bold" 
                                       Foreground="White" HorizontalAlignment="Center" Margin="0,5,0,10"/>
                        </StackPanel>
                    </Button>
                </UniformGrid>

                <!-- Нижние 2 кнопки -->
                <UniformGrid Grid.Row="1" Columns="2" Rows="1" Margin="40,10,40,77">
                    <!-- Мои цели -->
                    <Button x:Name="GoalsButton" Margin="20,20,20,20" Click="GoalsButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="#2196F3" CornerRadius="15">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <StackPanel>
                            <TextBlock Text="🎯" FontSize="48" HorizontalAlignment="Center" Margin="0,10,0,5"/>
                            <TextBlock Text="Мои цели" FontSize="18" FontWeight="Bold" 
                                       Foreground="White" HorizontalAlignment="Center" Margin="0,5,0,10"/>
                        </StackPanel>
                    </Button>

                    <!-- Графики -->
                    <Button x:Name="ChartsButton" Margin="20,20,20,20" Click="ChartsButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="#9C27B0" CornerRadius="15">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <StackPanel>
                            <TextBlock Text="📊" FontSize="48" HorizontalAlignment="Center" Margin="0,10,0,5"/>
                            <TextBlock Text="Графики" FontSize="18" FontWeight="Bold" 
                                       Foreground="White" HorizontalAlignment="Center" Margin="0,5,0,10"/>
                        </StackPanel>
                    </Button>
                </UniformGrid>
            </Grid>
        </Border>

        <!-- Верхняя панель -->
        <Border Height="60" Background="#4CAF50" VerticalAlignment="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Финансовый Тамагоччи" Foreground="White" FontSize="22" FontWeight="Bold"
                           VerticalAlignment="Top" HorizontalAlignment="Left" Margin="390,13,0,0"/>

                <!-- Панель валют -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,20,0" VerticalAlignment="Center">
                    <!-- Игровая валюта (корм) -->
                    <Border Background="White" CornerRadius="15" Padding="10,5" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🥕" FontSize="20" VerticalAlignment="Center"/>
                            <TextBlock x:Name="FoodCurrencyText" Text="100" FontSize="16" FontWeight="Bold" 
                                       Foreground="#FF9800" Margin="5,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Денежный баланс -->
                    <Border Background="White" CornerRadius="15" Padding="10,5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🍯" FontSize="20" VerticalAlignment="Center"/>
                            <TextBlock x:Name="BalanceText" Text="15 000.50 ₽" FontSize="16" FontWeight="Bold" 
                                       Foreground="#4CAF50" Margin="5,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>