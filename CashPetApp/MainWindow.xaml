<Window x:Class="FinancialTamagotchi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Финансовый Тамагоччи" 
        Height="700" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Grid>
        <!-- Левая часть с питомцем -->
        <Border Background="#FFF9E6" BorderBrush="#FFD699" BorderThickness="0,0,1,0" Margin="581,0,0,0">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Питомец -->
                <Border Width="200" Height="200" Background="#FFE066" CornerRadius="100"
                        BorderBrush="#FFB300" BorderThickness="3" Margin="0,0,0,20">
                    <TextBlock Text="🐹" FontSize="80" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <!-- Имя питомца -->
                <TextBlock Text="Копилко-хомяк" FontSize="20" FontWeight="Bold" Foreground="#8B4513"
                           HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <!-- Статистика -->
                <Border Background="White" CornerRadius="10" Padding="15" Margin="10">
                    <StackPanel>
                        <TextBlock Text="🍯 Баланс:" FontSize="14" Foreground="#666"/>
                        <TextBlock x:Name="PetBalanceText" Text="15 000 ₽" FontSize="18" FontWeight="Bold" 
                                   Foreground="#4CAF50" Margin="0,0,0,10"/>

                        <TextBlock Text="📈 Накоплено:" FontSize="14" Foreground="#666"/>
                        <TextBlock Text="5 000 ₽" FontSize="16" FontWeight="Bold" Foreground="#2196F3" Margin="0,0,0,10"/>

                        <TextBlock Text="😊 Настроение:" FontSize="14" Foreground="#666"/>
                        <TextBlock Text="Отличное!" FontSize="16" FontWeight="Bold" Foreground="#FF9800"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Правая часть с кнопками -->
        <Border Margin="0,5,424,5" Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Верхние 2 кнопки -->
                <UniformGrid Grid.Row="0" Columns="2" Rows="1" Margin="40,95,40,0">
                    <!-- Добавить трату -->

                    <!-- Добавить доход -->
                    <!-- Добавить трату -->

                    <!-- Добавить доход -->
                    <!-- Добавить трату -->

                    <!-- Добавить доход -->
                    <!-- Добавить трату -->
                    <Button x:Name="ExpenseButton" Margin="20,20,20,20" Click="ExpenseButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="#FF5722" CornerRadius="15">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <StackPanel>
                            <TextBlock Text="💸" FontSize="48" HorizontalAlignment="Center" Margin="0,10,0,5"/>
                            <TextBlock Text="Добавить трату" FontSize="18" FontWeight="Bold" 
                                       Foreground="White" HorizontalAlignment="Center" Margin="0,5,0,10"/>
                        </StackPanel>
                    </Button>

                    <!-- Добавить доход -->
                    <Button x:Name="IncomeButton" Margin="20,20,20,20" Click="IncomeButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="#4CAF50" CornerRadius="15">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <StackPanel>
                            <TextBlock Text="💰" FontSize="48" HorizontalAlignment="Center" Margin="0,10,0,5"/>
                            <TextBlock Text="Добавить доход" FontSize="18" FontWeight="Bold" 
                                       Foreground="White" HorizontalAlignment="Center" Margin="0,5,0,10"/>
                        </StackPanel>
                    </Button>
                </UniformGrid>

                <!-- Нижние 2 кнопки -->
                <UniformGrid Grid.Row="1" Columns="2" Rows="1" Margin="40,10,40,77">
                    <!-- Мои цели -->
                    <Button x:Name="GoalsButton" Margin="20,20,20,20" Click="GoalsButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="#2196F3" CornerRadius="15">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <StackPanel>
                            <TextBlock Text="🎯" FontSize="48" HorizontalAlignment="Center" Margin="0,10,0,5"/>
                            <TextBlock Text="Мои цели" FontSize="18" FontWeight="Bold" 
                                       Foreground="White" HorizontalAlignment="Center" Margin="0,5,0,10"/>
                        </StackPanel>
                    </Button>

                    <!-- Настройки -->
                    <Button x:Name="SettingsButton" Margin="20,20,20,20" Click="SettingsButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="#9C27B0" CornerRadius="15">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <StackPanel>
                            <TextBlock Text="⚙️" FontSize="48" HorizontalAlignment="Center" Margin="0,10,0,5"/>
                            <TextBlock Text="Настройки" FontSize="18" FontWeight="Bold" 
                                       Foreground="White" HorizontalAlignment="Center" Margin="0,5,0,10"/>
                        </StackPanel>
                    </Button>
                </UniformGrid>
            </Grid>
        </Border>

        <!-- Верхняя панель -->
        <Border Height="60" Background="#4CAF50" VerticalAlignment="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Финансовый Тамагоччи" Foreground="White" FontSize="22" FontWeight="Bold"
                           VerticalAlignment="Top" HorizontalAlignment="Left" Margin="390,13,0,0"/>

                <!-- Баланс -->
                <Border Background="White" CornerRadius="15" Padding="10,5" Margin="830,63,31,-39">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🍯" FontSize="20" VerticalAlignment="Center"/>
                        <TextBlock x:Name="BalanceText" Text="15 000.50 ₽" FontSize="16" FontWeight="Bold" 
                                   Foreground="#4CAF50" Margin="5,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>